<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".Buyer.MainActivity">
<ImageView
    android:id="@+id/app_logo"
    android:src="@drawable/applogo"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Find, Discover,  Choose and Buy"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="140dp"
        />
    <Button android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/main_login_btn"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="Already have an Account? Login"
        android:textAllCaps="false"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"

        android:layout_above="@+id/seller_begin"
       />

    <Button android:background="@drawable/input_design"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/main_join_now_btn"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="Join Now"
        android:textAllCaps="false"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/main_login_btn"/>

    <TextView
        android:id="@+id/seller_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want to become a seller ?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>