<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:gravity="center"
            android:textSize="26sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Write Your Phone Number..."
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:inputType="number"
        android:layout_below="@+id/relative2"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Question"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_below="@+id/find_phone_number"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is your nick name ??"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/title_question"
        android:layout_margin="15dp"
        />

    <EditText
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is your favourite game ??"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/question1"
        android:layout_margin="15dp"
        />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:padding="14dp"
        android:layout_below="@+id/question2"
        android:layout_margin="15dp"
        />
</RelativeLayout>